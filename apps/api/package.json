{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "db:migrate": "pnpm drizzle-kit generate && wrangler d1 migrations apply huntoru --local",
    "db:seed:local": "npx tsx src/scripts/seed.ts",

    "//-- 本番用コマンド --//": "",
    "db:migrate:prod": "wrangler d1 migrations apply huntoru --remote",
    "db:sql:generate": "npx tsx src/scripts/generate-sql.ts > seed.sql",
    "db:seed:prod": "wrangler d1 execute huntoru --remote --file=./seed.sql"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.0.2",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250723.0",
    "@eslint/js": "^9.30.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.4.0"
  }
}
